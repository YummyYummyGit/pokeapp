<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title : Poké -->
    <TextView
        android:id="@+id/title_poké"

        android:layout_width="388dp"
        android:layout_height="156dp"
        android:layout_marginTop="224dp"

        android:alpha="0.6"
        android:fontFamily="@font/lexend_thin"
        android:text="@string/title_name1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="140sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <!-- Title : App -->
    <TextView
        android:id="@+id/title_app"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="308dp"
        android:alpha="0.6"
        android:fontFamily="@font/lexend_semibold"
        android:text="@string/title_name2"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="150sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <!-- Button : Login -->

    <!-- Button : Register -->

    <Button
        android:id="@+id/btn_login"

        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginTop="116dp"

        android:backgroundTint="@color/white"
        android:fontFamily="@font/lexend_extrabold"
        android:text="Login"
        android:textColor="@color/grey"
        android:textSize="19dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_app" />

    <Button
        android:id="@+id/btn_register"

        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_margin="3dp"

        android:text="Register"
        android:fontFamily="@font/lexend_extrabold"
        android:textSize="19dp"

        style="@style/OutlinedButton"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />


</androidx.constraintlayout.widget.ConstraintLayout>