<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <!-- Background -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_app"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="300dp"
        android:alpha="0.6"
        android:fontFamily="@font/lexend_semibold"
        android:text="@string/title_name2"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="150sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/title_pokÃ©"

        android:layout_width="388dp"
        android:layout_height="156dp"
        android:layout_marginTop="216dp"

        android:alpha="0.6"
        android:fontFamily="@font/lexend_thin"
        android:text="@string/title_name1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="140sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/start_btn_login"

        android:layout_width="134dp"
        android:layout_height="44dp"
        android:layout_marginTop="68dp"

        android:backgroundTint="@color/white"
        android:fontFamily="@font/lexend_extrabold"
        android:text="Login"
        android:textColor="@color/grey"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_app" />

    <Button
        android:id="@+id/start_btn_register"

        android:layout_width="134dp"
        android:layout_height="44dp"
        android:layout_margin="3dp"

        android:background="@drawable/style_outlinedbutton"
        android:fontFamily="@font/lexend_extrabold"
        android:text="Register"

        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_btn_login"
        app:layout_constraintVertical_bias="0.065" />


</androidx.constraintlayout.widget.ConstraintLayout>